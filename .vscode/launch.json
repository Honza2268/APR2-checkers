    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Lokální připojení",
            "type": "python",
            "request": "attach",
            "connect": {
                "host": "localhost",
                "port": 5678
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}",
                    "remoteRoot": "."
                }
            ],
            "justMyCode": true
        },
        {
            "name": "Python: core.py in integrated terminal",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/Game/core.py",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Python: core.py in external terminal",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/Game/core.py",
            "console": "externalTerminal",
            "justMyCode": true
        },
        {
            "name": "Python: game.py in integrated terminal",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/Game/game.py",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Python: game.py in external terminal",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/Game/game.py",
            "console": "externalTerminal",
            "justMyCode": true
        }
    ]
}